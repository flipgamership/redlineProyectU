<!DOCTYPE html>
<html lang="en">

<head>
  <title>login red line </title>
  <link rel="icon" href="imgs/logo-white.ico">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/styleNavar.css">
  <link rel="stylesheet" href="/css/styleLogin.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:ital@1&display=swap" rel="stylesheet">
  <link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
  <script src="https://unpkg.com/boxicons@2.0.9/dist/boxicons.js"></script>
</head>

<body class="login">
  <header class="headerNav">
    <nav class="navbarPrimary">
      <a href="/home" class="navLogo"><img src="/img/2logo.png" alt="" width="100px"></a>
      <ul class="navMenu">
        <li class="navItem">
          <a href="/home" class="navLink"><i class='bx bxs-home-circle bx-flip-horizontal'></i> Home</a>
        </li>
        <li class="navItem">
          <a href="/inventarioHerramientasRedline" class="navLink"><i class='bx bxs-box'></i> Inventorio de herramientas</a>
        </li>
        <li class="navItem">
          <a href="/inventarioConsumiblesRedline" class="navLink"><i class='bx bxs-box'></i> inventario de consumibles</a>
        </li>
        <li class="navItem">
          <a href="#" class="navLink"><i class='bx bxs-box'></i> inventario de equipo de seguridad</a>
        </li>


      </ul>
      <div class="hamburger">
        <span class="bar"></span>
        <span class="bar"></span>
        <span class="bar"></span>
      </div>
    </nav>
  </header>

  <div class="container" style="margin-top: 150px; ">
    <div class="row justify-content-center mt-5 ">
      <div class="col-lg-6 col-md-8 col-sm-8">
        <div class="card">
          <%if (data){ %>
          <div class="card-title text-center border-bottom">
            <h2 class="p-3">retirar productos</h2>
          </div>
          <div class="card-body">
            <form action="/inventarioConsumiblesSalidaConsumiblesSendRedline" method="POST">
              <input type="hidden" name="id" value="<%= data.id %>" hidden>
              <input type="hidden" name="id_consumibles" value="<%= data.id_consumibles %>" hidden>
              <input type="hidden" name="cantidad" value="<%= data.cantidad %>" hidden>
              <input type="number" name="precio_compra" value="<%= data.precio_compra %>" hidden>
              <input type="number" name="precio_unidad" value="<%= data.precio_unidad %>" hidden>
              <input type="number" name="gasto_semanal" value="<%= data.gasto_semanal %>" hidden>
              <input type="text" name="tipo_unidad" value="<%= data.tipo_unidad %>" hidden>
              <input type="text" name="name" value="<%= name %>" hidden>
              <input type="hidden" name="fecha" id="fechaActual" hidden>
              <div class="mb-3">
                <h5 for="usuario">Nombre del consumible</h5>
                <input type="text" style="font-size: 14px;" class="form-control" name="nombre" value="<%= data.nombre %> " readonly>
              </div>
              <div class="mb-3">
                <% if (data.tipo_unidad == 'U'){%>
                <p style="font-size: 10px;">Unidades disponibles: <%= data.cantidad %> </p>
                <h5 for="usuario">cantidad de unidades que vas a retirar</h5>
                <input type="number" style="font-size: 14px;" class="form-control" name="cantidad_retirada" required>
              </div>
              <%}else if (data.tipo_unidad == 'M'){ %>
              <div class="mb-3">
                <p style="font-size: 13px;">metros disponibles: <%= data.cantidad %> </p>
                <h5 for="usuario">cantidad de metros que vas a retirar</h5>
                <input type="number" style="font-size: 14px;" class="form-control" name="metraje" required>
              </div>
              <% }else if (data.tipo_unidad == 'P'){ %>
              <div class="mb-3">
                <p>unidades disponibles: <%= data.cantidad %> </p>
                <h5 for="usuario">cantidad de unidades que vas a retirar</h5>
                <input type="number" style="font-size: 14px;" class="form-control" name="unidades_paquetes" required>
              </div>
              <% } %>
              <hr>
          </div>
          <% } %>
          <div class="d-grid">
            <a style="font-size: 14px;" onclick="alert()" class="btn btn-primary">enviar retiro de productos a mi inventario</a>
          </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  </div>
  <script>
    window.onload = function() {
      var fecha = new Date(); //Fecha actual
      var mes = fecha.getMonth() + 1; //obteniendo mes
      var dia = fecha.getDate(); //obteniendo dia
      var ano = fecha.getFullYear(); //obteniendo año
      if (dia < 10)
        dia = '0' + dia; //agrega cero si el menor de 10
      if (mes < 10)
        mes = '0' + mes //agrega cero si el menor de 10
      document.getElementById('fechaActual').value = ano + "-" + mes + "-" + dia;
    }
  </script>
  <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <% if(typeof alert != "undefined") { %>
  <script>
    Swal.fire({
      title: '<%=alertTitle %>',
      text: '<%= alertMessage%>',
      icon: '<%=alertIcon %>',
      showConfirmButton: '<%= showConfirmButton %>',
      timer: '<%= timer %>'
    }).then(() => {
      window.location = '/<%= ruta %>'
    })
  </script>
  <% } %>

  <script>
    var inputs = $("input[type=text]");
    for (var i = 0; i < inputs.length; i++) {
      var aux = $(inputs[i]).val().trim();
      $(inputs[i]).val(aux);
    }
  </script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.1.5/dist/sweetalert2.all.min.js"></script>
  <script>
    function alert() {
      Swal.fire({
        title: '¿Quieres ingresar los consumibles nuevos?',
        icon: 'warning',
        showCancelButton: true,
        cancelButtonText: 'NO',
        cancelButtonColor: '#d33',
        confirmButtonColor: '#3085d6',
        confirmButtonText: ` SI `,
      }).then((result) => {
        /* Read more about isConfirmed, isDenied below */
        if (result.isConfirmed) {
          Swal.fire('informacion actualizado exitosamente', '', 'success')
          const value = true
          setTimeout(timeUot, 2000, value);
        }
      })
    }

    function timeUot(values) {
      if (values) {
        document.forms[0].submit()
      }

    }
  </script>

  <script src="//cdn.jsdelivr.net/npm/sweetalert2@10"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="js/mainNavar.js"></script>
</body>

</html>