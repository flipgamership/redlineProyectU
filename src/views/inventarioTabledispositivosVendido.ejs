<div class="container">
  <h5 style="font-size: 20px; margin-bottom: 10px;">Tabla de inventario de dispositivos</h5>
  <hr>
  <table id="users" class="table table-light table-striped table-hover table-bordered text-center  " style="font-size: 14px;">
    <thead>
      <tr>
        <th>id</th>
        <th>nombre</th>
        <th>tipo de dispositivo</th>
        <th>mac</th>
        <th>cereal</th>

      </tr>
    </thead>
    <!-- <a class="btn btn-outline-warning" type="button"><i class='bx bxs-customize' ></i></a> -->
    <tbody>
      <% results.forEach((user) => {%>
      <tr>
        <td><%= user.id %> </td>
        <td><%= user.nombre %></td>
        <td><% if(user.tipo_dispositivo=='ONT'){ %>
          <p class="tipo_dispositivo">ONT</p>
          <%    }else  %>
          <% if(user.tipo_dispositivo=='ROUTER'){ %>
          <p class="tipo_dispositivo">ROUTER</p>
          <%    }else  %>
          <% if(user.tipo_dispositivo=='ANTENA'){ %>
          <p class="tipo_dispositivo">ANTENA</p>
          <%    }else  %>
          <% if(user.tipo_dispositivo=='ROUTERBOARD'){ %>
          <p class="tipo_dispositivo">ROUTERBOARD</p>
          <%    }else  %>
          <% if(user.tipo_dispositivo=='SWITCH'){ %>
          <p class="tipo_dispositivo">SWITCH</p>
          <%    } %>
        </td>
        <td><%= user.mac %></td>
        <td><%= user.cereal %></td>
        
      </tr>
      <% }) %>
    </tbody>
  </table>

</div>
</div>
</body>

