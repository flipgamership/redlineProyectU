  <div class="container" style="margin-top: 80px; ">
    <div class="row justify-content-center mt-5 ">
      <div class="col-lg-5 col-md-8 col-sm-8">
        <div class="card">
          <div class="card-title text-center border-bottom">
            <h2 class="p-3">Agregar dispositivos </h2>
          </div>
          <div class="card-body">
            <% if(data){ %> 
            <form action="/inventarioDispositivosEditarsendRedline" method="post">
              <input type="text" name="id" value="<%= data.id %>" hidden>
              <input type="text" name="fecha" id="fechaActual" hidden>
              <div class="mb-3">
                <h5 for="usuario">Nombre del dispositivo</h5>
                <input type="text" class="form-control" name="NAME" value="<%= data.nombre %>" required>
              </div>
              <div class="mb-3">
                <h5 for="usuario">Tipo de dispositivo</h5>
                <select name="DISPOSITIVOS" id="" class="form-control">
                  <option <%= data.tipo_dispositivo =='ONT' ? "selected" : '' %> value="ONT">Ont</option>
                  <option <%= data.tipo_dispositivo =='ROUTER' ? "selected" : '' %> value="ROUTER">Router</option>
                  <option <%= data.tipo_dispositivo =='ANTENA' ? "selected" : '' %> value="ANTENA">Antena</option>
                  <option <%= data.tipo_dispositivo =='ROUTERBOARD' ? "selected" : '' %> value="ROUTERBOARD">RouterBoard</option>
                  <option <%= data.tipo_dispositivo =='SWITCH' ? "selected" : '' %> value="SWITCH">Switch de red</option>
                </select>
              
              </div>
              <div class="mb-3">
                <h5 for="usuario">Mac del dispositivo </h5>
                <input type="text" class="form-control"  value="<%= data.mac %>"  name="MAC" >
              </div>
              <div class="mb-3">
                <h5 for="usuario">Cerial de dispositivos</h5>
                <input type="text" class="form-control"  value="<%= data.cereal %>" name="CERIAL" >
              </div>
              <div class="mb-3">
                <h5 for="usuario">Estado del dispositivo</h5>
                <select name="ESTADO" id="" class="form-control">
                  <option <%= data.estado =='N' ? "selected" : '' %> value="N">NUEVO</option>
                  <option <%= data.estado =='S' ? "selected" : ''  %> value="S">SEGUNDA MANO</option>
                  <option <%= data.estado =='R' ? "selected" : '' %> value="R">REPARADO</option>
                </select>
              </div>
          </div>
        </div>
        <div class="d-grid">
          <button type="submit" class="btn btn-primary">Agregar dispositivo</button>
        </div>
      </div>
      <% } %> 
      </form>
    </div>
  </div>
  </div>
  </div>
  </div>
  <script>
    window.onload = function() {
      var fecha = new Date(); //Fecha actual
      var mes = fecha.getMonth() + 1; //obteniendo mes
      var dia = fecha.getDate(); //obteniendo dia
      var ano = fecha.getFullYear(); //obteniendo a√±o
      if (dia < 10)
        dia = '0' + dia; //agrega cero si el menor de 10
      if (mes < 10)
        mes = '0' + mes //agrega cero si el menor de 10
      document.getElementById('fechaActual').value = ano + "-" + mes + "-" + dia;
    }
  </script>
