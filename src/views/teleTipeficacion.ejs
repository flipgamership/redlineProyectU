                              <option <%= user.tipificacion=='Soporte' ? "selected" : '' %> value="Soporte" style="font-size: 12px;">Soporte</option>
                              <option <%= user.tipificacion=='Satisfecho' ? "selected" : '' %> value="Satisfecho" style="font-size: 12px;">Satisfecho</option>
                              <option <%= user.tipificacion=='Interesado tv' ? "selected" : '' %> value="Interesado tv" style="font-size: 12px;">Interesado tv</option>
                              <option <%= user.tipificacion=='Interesado apps' ? "selected" : '' %> value="Interesado apps" style="font-size: 12px;">Interesado apps</option>
                              <option <%= user.tipificacion=='Apps y Tv' ? "selected" : '' %> value="Apps y Tv" style="font-size: 12px;">Apps y Tv</option>
                              <option <%= user.tipificacion=='Desconocido' ? "selected" : '' %> value="Desconocido" style="font-size: 12px;">Desconocido</option>
                              <option <%= user.tipificacion=='Otros' ? "selected" : '' %> value="Otros" style="font-size: 12px;">Otros</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <h5 for="usuario">observaciones</h5>
                            <input type="text" class="form-control" value="<%= user.observaciones %>" name="observaciones" required>
                        </div>
                        <div class="mb-3">
                            <h5 for="my-select">Estado de la llamada</h5>
                            <select id="my-select" class="form-control" name="estado" style="font-size: 12px;" required>
                              <option <%= user.estadoLLamada=='Si' ? "selected" : '' %> value="Si" style="font-size: 12px;">SI</option>
                              <option <%= user.estadoLLamada=='No' ? "selected" : '' %> value="No" style="font-size: 12px;">NO</option>
                            </select>
                        </div>
                        <% } %>
                        <div class="d-grid">
                            <a  style="font-size: 14px;" onclick="alert()" class="btn btn-primary">Actualizar el estado del Usuario</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
