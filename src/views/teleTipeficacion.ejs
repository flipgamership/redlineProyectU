            <div class="card">
                <%if (user){ %>
                <div class="card-title text-center border-bottom">
                    <h2 class="p-3">Estado del usuarios</h2>
                </div>
                <div class="card-body">
                    <form action="/telecomunicacionesValidarUsuarioSend" method="POST">
                        <input type="hidden" name="id" value="<%= user.id %> " hidden>
                        <div class="mb-3">
                            <h5 for="my-select">tipificacion</h5>
                            <select id="my-select" class="form-control" name="tipificacion" style="font-size: 12px;" required>
                              <option <%= user.tipificacion=='No contesto' ? "selected" : '' %> value="No contesto" style="font-size: 12px;">No contesto</option>
