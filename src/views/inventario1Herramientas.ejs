<div class="container">
  <div class="row">
    <h5 style="font-size: 20px; margin-bottom: 10px;">Tabla de estadisticas de reportes diarios</h5>
    <hr>
    <table id="users" class="table table-light table-striped table-hover table-bordered text-center  " style="font-size: 14px;">
      <thead>
        <tr>
          <th>codigo de herramienta</th>
          <th>img</th>
          <th>nombre</th>
          
          <th>donde esta</th>
          <th>descripcion del estado de la herramienta</th>
          <th>fecha</th>
          <th>utilidades</th>
        </tr>
      </thead>

      <tbody>
        <% results.forEach((user) => {%>


        <tr>
          <td><p style=" text-align: center; margin-top: 32px;"><%= user.codigo_herramienta %></p></td>
          <td><img style="width: 100px; height: 100px;" src="./uploads/<%= user.img %>" alt=""></td>
          <td><p style=" text-align: center; margin-top: 30px;"><%= user.nombre %></p></td>
          <td class="visor_imagenes"><% if (user.estado == 'P') {%>
            <p class="blanco-rojo"> PRESTADO </p>
            <% }else if( user.estado == 'B' ){%>
            <p class=" blanco-rojo2"> BODEGA </p>
            <% }else{%>
            <p class="blanco-rojo3"> ESTA DAÑADO O EXTRAVIADO </p>
            <% } %>
          </td>
          <td><p style=" text-align: center; margin-top: 30px;"><%= user.descripcion %></p></td>
          <td><p style=" text-align: center; margin-top: 30px;"><%= user.fecha %></p></td>
          <td>
            <a href="/editarHerramientaInventarioRedline/<%= user.codigo_herramienta %>" class="btn btn-warning" style="margin-top: 30px;" type="button"><i class='bx bx-pencil'></i></a>
            <a href="/sacarInventarioHerramientasRedline/<%= user.codigo_herramienta%>" class="btn btn-success"  style="margin-top: 30px;" type="button"><i class='bx bx-user-check'></i></a>
            <!-- <a href="/registerUsersDelate/" class="btn btn-danger" type="button"><i class='bx bxs-trash' ></i></a> -->
            <a onclick="alertDelate('<%= user.codigo_herramienta %>')" style="margin-top: 30px;" class="btn btn-danger" type="button"><i class='bx bxs-trash'></i></a>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>

  </div>
</div>
</body>

<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.11.1/js/jquery.dataTables.min.js" defer></script>
