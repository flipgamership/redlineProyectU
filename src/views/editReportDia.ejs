<div class="container" style="margin-top: 150px; ">
    <div class="row justify-content-center mt-5 ">
        <div class="col-lg-5 col-md-8 col-sm-8">
            <div class="card">
                <div class="card-title text-center border-bottom">
                    <h2 class="p-3">Realizar reporte diario</h2>
                </div>
                <div class="card-body">
                    <%if (user){ %>
                    <form action="/telecomunicacionesEditReporteDiaSend" method="POST">
                        <input type="hidden" name="id" value="<%= user.id %>" hidden>
                        <div class="mb-3">
                            <h5 for="usuario">Fecha del registro</h5>
                            <input type="date" class="form-control" value="<%= user.fecha %>" name="fecha" required>
                        </div>
                        <div class="mb-3">
                            <h5 for="usuario">Total de llamadas realizadas</h5>
                            <input type="number" class="form-control" value="<%= user.llamadas %>" min="1" name="llamadas" required>
                        </div>
                        <div class="mb-3">
                            <h5 for="usuario">Total de llamadas contestadas</h5>
                            <input type="number" class="form-control" value="<%= user.contestadas %>" min="1" name="contestadas" required>
                        </div>
                        <div class="mb-3">
                            <h5 for="usuario">Total de llamadas no contestadas</h5>
                            <input type="number" class="form-control" value="<%= user.noContestadas %>" min="1" name="noContestadas" required>
                        </div>
                        <div class="mb-3">
                            <h5 for="usuario">llamadas a buzon de voz</h5>
                            <input type="number" class="form-control" value="<%= user.buzon %>" min="1" name="buzon" required>
                        </div>
                        <div class="mb-3">
                            <h5 for="usuario">Total de clientes interesados en la tv y las apps</h5>
                            <input type="number" class="form-control" value="<%= user.interesados %>" min="1" name="interesados" required>
                        </div>
                        <div class="mb-3">
                            <h5 for="usuario">Total de clientes que solicitan soporte</h5>
                            <input type="number" class="form-control" value="<%= user.soporte %>" min="1" name="soporte" required>
                        </div>
                        <div class="mb-3">
                            <h5 for="usuario">Observaciones de las llamadas</h5>
                            <input type="text" class="form-control" name="observaciones" value="<%= user.observaciones %>">
                        </div>
                        <% } %> 
                        <div class="d-grid">
                            <a  style="font-size: 14px;" onclick="alert()" class="btn btn-primary">Editar reporte diario</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
