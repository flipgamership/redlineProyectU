<body class="login" >
    <%- include('./partials/dev.ejs') %>
<div class="container" style="margin-top: 150px; ">
    <div class="row justify-content-center mt-5 ">
        <div class="col-lg-5 col-md-8 col-sm-8">
            <div class="card">
                <div class="card-title text-center border-bottom">
                    <h2 class="p-3">agregar nuevo tecnico a la base de datos</h2>
                </div>
                <div class="card-body">
                    <form action="/registerNewTecnicoRedline" method="POST">
                        <div class="mb-3">
                            <h5 for="usuario">nombre completo</h5>
                            <input type="text" class="form-control"  name="nombre" required>
                        </div>
                        <div class="mb-3">
                            <h5 for="usuario">correo electronico</h5>
                            <input type="text" class="form-control"  name="correo" required>
                        </div>
                        <div class="mb-3">
                            <h5 for="usuario">numero de cedula</h5>
                            <input type="text" class="form-control"  name="cedula" required>
                        </div>
                        <div class="mb-3">
                            <h5 for="usuario">numero Celular</h5>
                            <input type="text" class="form-control" name="celular" required>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Agregar Tecnico</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<% if(typeof alert != "undefined") { %> 
<script>
    Swal.fire({
        title: '<%=alertTitle %>',
        text: '<%= alertMessage%>',
        icon: '<%=alertIcon %>',
        showConfirmButton: '<%= showConfirmButton %>' ,
        timer: '<%= timer %>'
    }).then(()=>{
        window.location='/<%= ruta %>'
    })
</script>
<% } %> 
    <script>
        var inputs = $("input[type=text]");
      for(var i = 0; i < inputs.length; i++){
        var aux = $(inputs[i]).val().trim();
        $(inputs[i]).val(aux);
      }
      </script>

