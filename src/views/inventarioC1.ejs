<div class="container">
  <div class="row">
    
    <h5 style="font-size: 20px; margin-bottom: 10px;">inventario de consumibles</h5>
    <hr>
    <div class="row">
        <a href="/inventarioConsumiblesnewConsumibleRedline" style="margin-bottom: 10px; margin-left: 8px;" class="btn btn-outline-secondary col-md-2 " type="button">Agregar consumible</a>
      </div>
    <table id="users" class="table table-light table-striped table-hover table-bordered text-center  " style="font-size: 14px;">
      <thead>
        <tr>
          <th>id del pruducto</th>
          <th>nombre</th>
          <th>cantidad</th>
          <th>disponibilidad</th>
          <th>utilidades</th>
        </tr>
      </thead>

      <tbody>
        <% results.forEach((user) => {%>


        <tr>
          <td><%= user.id_consumibles %> </td>
          <td><%= user.nombre %> </td>

          <td><% if(user.tipo_unidad=='M'){ %> 
            <%= user.cantidad %> Metros
          <% }else{ %> 
            <%= user.cantidad %> unidades
            <% } %> 
          </td>
          <td class="visor_imagenes" ><% if (user.cantidad <= 0) {%>
            <p class="blanco-rojo3"> Agotado </p>
            <% }else if( user.cantidad >= 1 && user.cantidad <= user.cantidad_min ){%>
            <p class=" blanco-rojo"> Enpieza a escasear </p>
            <% }else{%>
            <p class="blanco-rojo2"> Disponible </p>
            <% } %>
          </td>
          <td>
            <a href="/informacionConsumiblesRedline/<%= user.id %>" class="btn btn-warning" style="font-size: 14px;" type="button"><i class='bx bxs-error-circle'></i></a>
            <a href="/inventarioConsumiblesnewConsumiblesEditRedline/<%= user.id %>" class="btn btn-info" style="font-size: 14px;" type="button"><i class='bx bx-pencil'></i></a>
            <a href="/inventarioConsumiblesSalidaConsumiblesRedline/<%= user.id %>" class="btn btn-success" style="font-size: 14px;" type="button"><i class='bx bx-archive-out' ></i></a>
            <a href="/inventarioConsumiblesIngresoConsumiblesRedline/<%= user.id %>" class="btn btn-warning" style="font-size: 14px;" type="button"><i class='bx bx-archive-in' ></i></a>
            <!-- <a href="/registerUsersDelate/" class="btn btn-danger" type="button"><i class='bx bxs-trash' ></i></a> -->
            <a onclick="alertDelate('<%= user.id %>')" style="font-size: 14px;" class="btn btn-danger" type="button"><i class='bx bxs-trash'></i></a>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>

  </div>
</div>
</body>

