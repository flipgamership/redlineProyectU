<div class="container">
  <div class="row">
    <h5 style="font-size: 20px; margin-bottom: 10px;" >Tabla de estadisticas que nesesitan soporte</h5>
    <table id="users" class="table table-light table-striped table-hover table-bordered text-center  " style="font-size: 14px;">
      <thead>
        <tr>
        <th>ID</th>
        <th>Nombre</th>
        <th>Cedula</th>
        <th>Telefono</th>
        <th>Plan</th>
        <th>Estado de llamada</th>
        <th>Tipificacion</th>
        <th>Observaciones</th>
        <th>¿ Realizar seguimiento?</th>
      </tr>
      </thead>

      <tbody>
        <% results.forEach((user) => {%>


        <tr>
          <td><%= user.id %> </td>
          <td><%= user.nombre %> </td>
          <td><%= user.cedula %></td>
          <td><%= user.telefono %></td>
          <td><%= user.plan %></td>
          <td><%= user.estadoLLamada %></td>
          <td><%= user.tipificacion %></td>
          <td><%= user.observaciones %></td>
          <td>
              <a onclick="alert()" class="btn btn-warning" type="button">Seguimiento</a>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>

  </div>
</div>
</body>

