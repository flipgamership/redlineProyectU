<html lang="en">

<head>
  <link rel="shortcut icon" href="/img/favicon.png">
  <title>inventario de consumibles redline</title>

  <link rel="stylesheet" href="/css/styleRegister.css">
  <link rel="stylesheet" href="/css/styleLogin.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/styleNavar.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:ital@1&display=swap" rel="stylesheet">
  <link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
  <script>
    import 'boxicons';
  </script>
  <script src="https://unpkg.com/boxicons@2.0.9/dist/boxicons.js"></script>
</head>
</head>

<body class="login">

  <%- include('partials/nav2.ejs') %>

  <div class="container" style="margin-top: 80px; ">
    <div class="row justify-content-center mt-5 ">
      <div class="col-lg-5 col-md-8 col-sm-8">
        <div class="card">
          <div class="card-title text-center border-bottom">
            <h2 class="p-3">editar ticket del cronograma</h2>
          </div>
          <div class="card-body">
            <form action="/cronogramaEditarSend" method="POST">
              <% if(data){ %> 
                <input type="text" name="id" value="<%= data.id %>" hidden>
              <div class="mb-3">
                <h4 for="usuario">feha de la cita</h5>
                <input type="date" class="form-control" value="<%= data.fecha %>" name="fecha_consulta" required>
              </div>
              <div class="mb-3">
                <h4 for="usuario">nombre del cliente</h5>
                <input type="text" class="form-control" style="font-size: 14px;" name="nombre"  value="<%= data.nombre_cliente %>" required>
              </div>
              <div class="mb-3">
                <h4 for="usuario">hora de la cita</h5>
                <input type="time" class="form-control" style="font-size: 14px;" name="hora"  value="<%= data.hora %>" required>
              </div>
              <div class="mb-3">
                <h4 for="usuario">celular</h5>
                <input type="text" class="form-control" style="font-size: 14px;" name="celular"  value="<%= data.celular %>" required>
              </div>
              <div class="mb-3">
                <h4 for="usuario">nota de la cita</h5>
                <input type="text" class="form-control" style="font-size: 14px;" name="nota"  value="<%= data.Nota %>" required>
              </div>
              <div class="mb-3">
                <h4 for="usuario">ip</h5>
                <input type="text" class="form-control" style="font-size: 14px;" name="ip"  value="<%= data.ip %>" required>
              </div>
              <div class="mb-3">
                <h4 for="usuario">plan</h5>
                <input type="text" class="form-control" style="font-size: 14px;" name="plan"  value="<%= data.plan %>" required>
              </div>
              <div class="mb-3">
                <h4 for="usuario">coordenadas de la ubicacion</h5>
                <input type="text" class="form-control" style="font-size: 14px;" name="coordenas" value="<%= data.coordenas %>" required>
              </div>
              <div class="mb-3">
                <h4 for="usuario">Â¿Tv?</h4>
                <select id="opcion" class="form-control" style="font-size: 14px;" name="TV" required>
                  <option <%= data.tv =='SI' ? "selected" : '' %> style="font-size: 12px;">SI</option>
                  <option <%= data.tv =='NO' ? "selected" : '' %> style="font-size: 12px;">NO</option>
                </select>
              <div class="mb-3">
                <input type="text" class="form-control" name="estado" value="INCOMPLETO" hidden>
              </div>

              <div class="mb-3">
                <h5 for="usuario">Actividad</h5>
                <select id="opcion" class="form-control" style="font-size: 12px;" name="tipo_instalacion" required>
                  <option <%= data.tipo_instalacion =='Instalacion' ? "selected" : '' %> value="Instalacion" style="font-size: 14px;">Instalacion</option>
                  <option <%= data.tipo_instalacion =='Soporte' ? "selected" : '' %> value="Soporte" style="font-size: 14px;">Soporte</option>
                  <option <%= data.tipo_instalacion =='Migracion' ? "selected" : '' %> value="Migracion" style="font-size: 14px;">Migracion</option>
                  <option <%= data.tipo_instalacion =='Translado' ? "selected" : '' %> value="Translado" style="font-size: 14px;">Translado</option>
                </select>
              </div>
              <div class="mb-3">
                <h5 for="usuario">Tecnologias</h5>
                <select id="opcion" class="form-control" style="font-size: 12px;" name="tecnologias" required>
                  <option <%= data.genero =='Fo' ? "selected" : '' %> value="Fo" style="font-size: 14px;">Fibra optica</option>
                  <option <%= data.genero =='Re' ? "selected" : '' %> value="Re" style="font-size: 14px;">Radio enlace</option>
                  <option <%= data.genero =='Ca' ? "selected" : '' %> value="Ca" style="font-size: 14px;">Camaras</option>
                </select>
              </div>
              <div class="mb-3">
                <h4 for="usuario">seleccione el tecnico al que se le asignara la tarea</h4>
                <p for="usuario" style="font-size: 14px;">seleccionar el tecnico al cual estava asignado antes por seguridad</p>
                <select id="opcion" class="form-control" style="font-size: 12px;" name="id_tecnico" required>
                    <% results.forEach((users) => {%>
                    <option value="<%= users.id%>"><%= users.nombre%></option>
                  <% })%>
                </select>
              </div>
                    <% } %> 
              <div class="d-grid">
                <button type="submit" class="btn btn-primary">Editar ticket de cronograma</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
  <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <% if(typeof alert != "undefined") { %>
  <script>
    Swal.fire({
      title: '<%=alertTitle %>',
      text: '<%= alertMessage%>',
      icon: '<%=alertIcon %>',
      showConfirmButton: '<%= showConfirmButton %>',
      timer: '<%= timer %>'
    }).then(() => {
      window.location = '/<%= ruta %>'
    })
  </script>
  <% } %>
  <script>
    var inputs = $("input[type=text]");
    for (var i = 0; i < inputs.length; i++) {
      var aux = $(inputs[i]).val().trim();
      $(inputs[i]).val(aux);
    }
  </script>

  <script src="//cdn.jsdelivr.net/npm/sweetalert2@10"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script>
    function seleccionado() {
      var opt = $('#opcion').val();

      // alert(opt);
      if (opt == "U") {
        $('#categoria').show();
        $('#subcategoria').hide();
        $('#producto').hide();
      } else {
        if (opt == "M") {
          $('#categoria').hide();
          $('#subcategoria').show();
          $('#producto').hide();
        } else {
          $('#categoria').hide();
          $('#subcategoria').hide();
          $('#producto').show();
        }
      }
    }
  </script>
  <%- include('partials/footer2.ejs') %>
</body>

</html>