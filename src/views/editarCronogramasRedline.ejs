  <script>
    function seleccionado() {
      var opt = $('#opcion').val();

      // alert(opt);
      if (opt == "U") {
        $('#categoria').show();
        $('#subcategoria').hide();
        $('#producto').hide();
      } else {
        if (opt == "M") {
          $('#categoria').hide();
          $('#subcategoria').show();
          $('#producto').hide();
        } else {
          $('#categoria').hide();
          $('#subcategoria').hide();
          $('#producto').show();
        }
      }
    }
  </script>
