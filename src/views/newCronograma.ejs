<body class="login">
  <%- include('./partials/nav.ejs') %>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-5 col-md-8 col-sm-8">
        <div class="card">
          <div class="card-title text-center border-bottom">
            <h2 class="p-3">agregar nuevo ticket al cronograma</h2>
          </div>
          <div class="card-body">
            <form action="/agregarNuevoCronogramaSend" method="POST">

              <div class="mb-3">
                <h4 for="usuario">feha de la cita</h5>
                <input style="font-size: 14px;" type="date" class="form-control" name="fecha_consulta" required>
              </div>
              <div class="mb-3">
                <h4 for="usuario">nombre del cliente</h5>
                <input style="font-size: 14px;" type="text" class="form-control" name="nombre" required>
              </div>
              <div class="mb-3">
                <h4 for="usuario">hora de la cita</h5>
                <input style="font-size: 14px;" type="time" class="form-control" name="hora" required>
              </div>
              <div class="mb-3">
                <h4 for="usuario">celular</h5>
                <input style="font-size: 14px;" type="text" class="form-control" name="celular" required>
              </div>
              <div class="mb-3">
                <h4 for="usuario">nota de la cita</h5>
                <input style="font-size: 14px;" type="text" class="form-control" name="nota" required>
              </div>
              <div class="mb-3">
                <h4 for="usuario">ip</h5>
                <input style="font-size: 14px;" type="text" class="form-control" name="ip" required>
              </div>
              <div class="mb-3">
                <h4 for="usuario">plan</h5>
                <input style="font-size: 14px;" type="text" class="form-control" name="plan" required>
              </div>
              <div class="mb-3">
                <h4 for="usuario">coordenadas de la ubicacion</h5>
                <input style="font-size: 14px;" type="text" class="form-control" name="coordenas" required>
              </div>
              <div class="mb-3">
                <h4 for="usuario">Â¿Tv?</h5>
                <select id="opcion" class="form-control" style="font-size: 14px;" name="TV" required>
                  <option style="font-size: 12px;">SI</option>
                  <option style="font-size: 12px;">NO</option>
                </select>
              <div class="mb-3">
                <input type="text" class="form-control" name="estado" value="INCOMPLETO" hidden>
              </div>

              <div class="mb-3">
                <h4 for="usuario">Actividad</h5>
                <select id="opcion" class="form-control" style="font-size: 14px;" name="tipo_instalacion" required>
                  <option value="Instalacion" style="font-size: 12px;">Instalacion</option>
                  <option value="Soporte" style="font-size: 12px;">Soporte</option>
                  <option value="Migracion" style="font-size: 12px;">Migracion</option>
                  <option value="Translado" style="font-size: 12px;">Translado</option>
                </select>
              </div>
              <div class="mb-3">
                <h4 for="usuario">Tecnologias</h5>
                <select id="opcion" class="form-control" style="font-size: 14px;" name="tecnologias" required>
                  <option value="Fo" style="font-size: 12px;">Fibra optica</option>
                  <option value="Re" style="font-size: 12px;">Radio enlace</option>
                  <option value="Ca" style="font-size: 12px;">Camaras</option>
                </select>
              </div>
              <div class="mb-3">
                <h4 for="usuario">seleccione el tecnico al que se le asignara la tarea</h5>
                <select id="opcion" class="form-control" style="font-size: 14px;" name="id_tecnico" required>
                    <% results.forEach((users) => {%>
                    <option value="<%= users.id%>"><%= users.nombre%></option>
                  <% })%>
                </select>
              </div>

              <div class="d-grid">
                <button type="submit" class="btn btn-primary">Asignar ticket del cronograma</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
  <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <% if(typeof alert != "undefined") { %>
  <script>
    Swal.fire({
      title: '<%=alertTitle %>',
      text: '<%= alertMessage%>',
      icon: '<%=alertIcon %>',
      showConfirmButton: '<%= showConfirmButton %>',
      timer: '<%= timer %>'
    }).then(() => {
      window.location = '/<%= ruta %>'
    })
  </script>
  <% } %>
  <script>
    var inputs = $("input[type=text]");
    for (var i = 0; i < inputs.length; i++) {
      var aux = $(inputs[i]).val().trim();
      $(inputs[i]).val(aux);
    }
  </script>

  <script src="//cdn.jsdelivr.net/npm/sweetalert2@10"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script>
    function seleccionado() {
      var opt = $('#opcion').val();

      // alert(opt);
      if (opt == "U") {
        $('#categoria').show();
        $('#subcategoria').hide();
        $('#producto').hide();
      } else {
        if (opt == "M") {
          $('#categoria').hide();
          $('#subcategoria').show();
          $('#producto').hide();
        } else {
          $('#categoria').hide();
          $('#subcategoria').hide();
          $('#producto').show();
        }
      }
    }
  </script>
  <%- include('./partials/footer.ejs') %>
</body>

</html>