        <div class="card">
          <%if (dataH){ %>
          <div class="card-title text-center border-bottom">
            <h2 class="p-3">devolver productos</h2>
          </div>
          <div class="card-body">
            <form action="/devolverInventarioHerramientasSendRedline" method="POST">
              <input type="hidden" name="fecha" id="fechaActual" hidden>
              <div class="mb-3">
                <h5 for="usuario">codigo de ela herramienta que vas a devolver</h5>
                <input type="text" class="form-control input-sm" name="codigoH" value="<%= dataH.codigo_herramienta%>" readonly>
              </div>
              <div class="mb-3">
                <h5 for="usuario">la herramienta que vas a devolver</h5>
                <input type="text" class="form-control input-sm" name="nombre" value="<%= dataH.nombre %>" readonly>
              </div>
              <div class="mb-3">
                <h5 for="usuario">la descripcion de la herrameinta</h5>
                <p> por favor ingrese el estado en que se devolvio la herramienta como describcion fisica de la herrameinta</p>
                <input type="text" class="form-control input-sm" name="descripcion"  required>
              </div>

              <h5 for="usuario">quien devolvio la herramienta</h5>
              <% } %>
              <select name="id_tecnico" id="" class="form-control input-sm">
                <% for (let i = 0; i < data.length; i++) { %>
                  <% if (data[i].id == 999999999){%> 
                    |----|
                  <%}else{ %> 
                  <option value="<%= data[i].id%>"><%= data[i].miembro%></option>
                  <% }%>
                <% } %>
              </select>              
          </div>

          <hr>
        </div>

        <div class="d-grid">
          <a style="font-size: 14px;" onclick="alert()" class="btn btn-primary">enviar retiro de productos a mi inventario</a>
        </div>
        </form>
      </div>
    </div>
  </div>
  </div>
  </div>
  <script>
    window.onload = function() {
      var fecha = new Date(); //Fecha actual
      var mes = fecha.getMonth() + 1; //obteniendo mes
      var dia = fecha.getDate(); //obteniendo dia
      var ano = fecha.getFullYear(); //obteniendo año
      if (dia < 10)
        dia = '0' + dia; //agrega cero si el menor de 10
      if (mes < 10)
        mes = '0' + mes //agrega cero si el menor de 10
      document.getElementById('fechaActual').value = ano + "-" + mes + "-" + dia;
    }
  </script>
  <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <% if(typeof alert != "undefined") { %>
  <script>
    Swal.fire({
      title: '<%=alertTitle %>',
      text: '<%= alertMessage%>',
      icon: '<%=alertIcon %>',
      showConfirmButton: '<%= showConfirmButton %>',
      timer: '<%= timer %>'
    }).then(() => {
      window.location = '/<%= ruta %>'
    })
  </script>
  <% } %>

  <script>
    var inputs = $("input[type=text]");
    for (var i = 0; i < inputs.length; i++) {
      var aux = $(inputs[i]).val().trim();
      $(inputs[i]).val(aux);
    }
  </script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.1.5/dist/sweetalert2.all.min.js"></script>
  <script>
    function alert() {
      Swal.fire({
        title: '¿estas seguro que quieres pedir prestada esta herramienta?',
        icon: 'warning',
        showCancelButton: true,
        cancelButtonText: 'NO',
        cancelButtonColor: '#d33',
        confirmButtonColor: '#3085d6',
        confirmButtonText: ` SI `,
      }).then((result) => {
        /* Read more about isConfirmed, isDenied below */
        if (result.isConfirmed) {
          Swal.fire('ok muchas gracias recuerdad devolverla', '', 'success')
          const value = true
          setTimeout(timeUot, 3000, value);
        }
      })
    }

    function timeUot(values) {
      if (values) {
        document.forms[0].submit()
      }

    }
  </script>

  <script src="//cdn.jsdelivr.net/npm/sweetalert2@10"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
