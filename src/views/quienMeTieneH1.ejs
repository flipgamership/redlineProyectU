<body class="login" >
    <%- include('partials/dev2.ejs') %>

<div class="container" style="margin-top: 150px; ">
    <div class="row justify-content-center mt-5 ">
        <div class="col-lg-5 col-md-8 col-sm-8">
            <div class="card">
                <div class="card-title text-center border-bottom">
                    <h2 class="p-3">quien me tiene</h2>
                </div>
                <% results.forEach((user) => {%>
                <div class="card-body">
                    <form action="/QuienMeTieneMail" method="POST">
                        <input type="hidden" name="id" value="<%= user.id_cuadrilla %> " hidden>
                        <div class="mb-3">
                            <h5 for="usuario">Nombre de la persona que tiene la herramienta</h5>
                            <input type="text" class="form-control" value="<%= user.miembro %>" name="nombre" readonly>
                        </div>
                        <div class="mb-3">
                            <h5 for="usuario">Correo de la persona que tiene la herramienta</h5>
                            <input type="text" class="form-control" value="<%= user.correo %>" name="correo" readonly>
                        </div>
                        <% }) %> 
                        <div class="mb-3">
                            <h5 for="usuario">Nombre de la herramienta</h5>
                            <input type="text" class="form-control" value="<%= nameH1 %>" name="nombre_herramienta" readonly>
                        </div>
                      
                        
                        <div class="mb-3">
                            <h5 for="usuario">codigo de la herramienta</h5>
                            <input type="text" class="form-control" value="<%= codigoH1 %>" name="codigo_herramienta" readonly>
                        </div>
                        <div class="d-grid">
                            <a  style="font-size: 14px;" onclick="alert()" class="btn btn-outline-success">solicitud de devolucion de herramienta al tecnico</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.1.5/dist/sweetalert2.all.min.js"></script>
<script>
  function alert() {
    Swal.fire({
      title: 'Â¿Quieres que devuelva la herramienta el tecnico?',
      icon: 'warning',
      showCancelButton: true,
      cancelButtonText: 'NO',
      cancelButtonColor: '#d33' ,
      confirmButtonColor:'#3085d6' ,
      confirmButtonText: ` SI `,
    }).then((result) => {
      /* Read more about isConfirmed, isDenied below */
      if (result.isConfirmed) {
        Swal.fire('correo enviado exitosamente', '', 'success')
        const value = true
        setTimeout(timeUot, 2000, value);
      } 
    })
  }
  function timeUot (values){
    if(values){
      document.forms[0].submit()
    }
    
  }
</script>
