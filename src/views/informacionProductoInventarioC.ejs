<div class="container" style="margin-top: 150px; ">
    <div class="row justify-content-center mt-5 ">
        <div class="col-lg-5 col-md-8 col-sm-8">
            <div class="card">
                <div class="card-title text-center border-bottom">
                    <h2 class="p-3">informacion del consumible seleccionado</h2>
                </div>
                <div class="card-body">
                    <% if(data){ %> 
                        <h5 style="font-size: 15px; " >Nombre del consumible:</h5>
                        <p style="font-size: 13px; ">- <%= data.nombre %> </p>
                        <h5 style="font-size: 15px;">id del consumible:</h5>
                        <p style="font-size: 13px; ">- <%= data.id_consumibles %> </p>
                        <h5 style="font-size: 15px;">cantidad disponible:</h5>
                        <p style="font-size: 13px; ">- <%= data.cantidad %> </p>
                        <h5 style="font-size: 15px;">precio total:</h5>
                        <p style="font-size: 13px; ">- <%= data.precio_compra %> </p>
                        <h5 style="font-size: 15px;">precio por unidad(Unidad/Metros):</h5>
                        <p style="font-size: 13px; ">- <%= data.precio_unidad %> </p>
                        <h5 style="font-size: 15px;">tiempro promedio para que se agote:</h5>
                        <p style="font-size: 13px; ">- <%= data.cantidad / data.gasto_semanal  %> semanas </p>
                    <% } %> 
                    <button onclick="back()" class="btn btn-primary col-lg-12" type="button">volver a la table</button>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function back(){
        window.location='/inventarioConsumiblesRedline'
    }
</script>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<% if(typeof alert != "undefined") { %> 
<script>
    Swal.fire({
        title: '<%=alertTitle %>',
        text: '<%= alertMessage%>',
        icon: '<%=alertIcon %>',
        showConfirmButton: '<%= showConfirmButton %>' ,
        timer: '<%= timer %>'
    }).then(()=>{
        window.location='/<%= ruta %>'
    })
</script>
<% } %> 
