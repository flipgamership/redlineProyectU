  <div class="container" style="margin-top: 80px; ">
    <div class="row justify-content-center mt-5 ">
      <div class="col-lg-5 col-md-8 col-sm-8">
        <div class="card">
          <div class="card-title text-center border-bottom">
            <h2 class="p-3">respuesta a solicitud de reprogramacion</h2>
          </div>
          <div class="card-body">
            <form action="/cornogramaReprogramacionRespuestaSend" method="POST">
                <% if(data){ %> 
                <input type="text" value="<%= data.id %>"  name="id" hidden>
              <div class="mb-3">
                <p>se solicito la reprogramacion del : <%= data.tipo_instalacion %> </p>
                <h5 for="usuario">nombre del cliente</h5>
                <input type="text" class="form-control" name="name" value="<%= data.nombre_cliente %>" readonly>
              </div>
              <div class="mb-3">
                <h5 for="usuario">porque : </h5>
                <input type="text" class="form-control" value="<%= data.evidencias_reprogramacion %>" name="evidencia" readonly>
              </div>
              <hr>
              <div class="mb-3">
                <h5 for="usuario">nueva fecha</h5>
                <input type="date" class="form-control"  name="fecha" required>
              </div>
              <div class="mb-3">
                <h5 for="usuario">nueva hora</h5>
                <input type="time" class="form-control"  name="hora" required>
              </div>
            <% } %> 
              <div class="d-grid">
                <button type="submit" class="btn btn-primary">Reprogramar ticket de cronograma</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
